<?php

/**
  * Implements hook_ctools_plugin_directory().
  */
 function labels_ctools_plugin_directory($module, $plugin) {
   if ($module == 'ctools' && in_array($plugin, array('contexts', 'export_ui'))) {
     return "plugins/$plugin";
   }
 }

 /**
 * Implements hook_views_api().
 */
function labels_views_api() {
  return array(
    'api' => 3,
    'path' => drupal_get_path('module', 'labels') . '/includes',
  );
}

/**
 * Load a fully-loaded label object.
 * @param $name
 *   The machine-name of the label.
 */
function labels_load($machine_name) {
  ctools_include('export');
  return ctools_export_crud_load('labels', $machine_name);
}

/**
 * Load all the things!
 */
function labels_load_all() {
  ctools_include('export');
  return ctools_export_crud_load_all('labels');
}
